{
  "name": "@aragon/govern-monorepo",
  "version": "1.0.0-beta.1",
  "description": "Optimistic DAOs",
  "private": true,
  "repository": "https://github.com/aragon/govern",
  "author": "Aragon Association <legal@aragon.org>",
  "contributors": [
    "Jorge Izquierdo <jorge@aragon.one>",
    "Enrique Ortiz <enrique@aragon.one>"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "test": "lerna run --parallel --stream --ignore @aragon/erc3kjs test",
    "coverage": "lerna run --concurrency 1 --stream --ignore @aragon/erc3kjs coverage",
    "build": "lerna run --scope=@aragon/govern* --concurrency=1 --stream compile",
    "build:contracts": "lerna run --scope=@aragon/govern --concurrency=1 --stream compile",
    "build:subgraph": "lerna run --scope=@aragon/govern-subgraph --concurrency=1 --stream build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/@graphprotocol/graph-cli",
      "**/@graphprotocol/graph-cli/**"
    ]
  }
}
