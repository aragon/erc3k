{
  "extends": "@ethereumjs/config-tsc",
  "compilerOptions": {
    "module": "es6",
    "target": "es2018",
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "inlineSources": true,
    "paths": {
      "internal": ["./internal/"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "types": [
      "jest"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "./internal/**/*",
    "./public/**/*"
  ]
}
