{
  "name": "@aragon/govern",
  "version": "1.0.0-beta.12",
  "description": "Govern JS Client",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/cjs/public/index.js",
  "module": "dist/esm/public/index.js",
  "types": "dist/cjs/public/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "dev:esm": "yarn build:esm --watch",
    "dev:cjs": "yarn build:cjs --watch",
    "uglify:esm": "uglifyjs dist/esm/public/govern-esm.js --output dist/esm/public/govern-esm.min.js",
    "uglify:umd": "uglifyjs dist/umd/public/govern-umd.js --output dist/umd/public/govern-umd.min.js",
    "build:contracts": "lerna run --scope=@aragon/govern-core --stream compile",
    "test": "jest && yarn e2e && yarn test:hardhat && yarn depcheck",
    "e2e": "yarn build && jest -c ./jest.config.e2e.js",
    "test:hardhat": "yarn build:contracts && hardhat test",
    "depcheck": "yarn build && dependency-check ./package.json --missing --verbose",
    "prepublishOnly": "yarn build",
    "geth:pull": "docker pull ethereum/client-go:v1.9.24",
    "geth:start": "docker run -p 8545:8545 --name geth-test ethereum/client-go:v1.9.24 --http --http.addr 0.0.0.0 --http.port 8545 --http.api personal,eth,net,web3,admin --dev --dev.period 1 --miner.gastarget 80000000 --networkid 1337 --allow-insecure-unlock --verbosity 0 &>/dev/null &",
    "geth:stop": "docker stop geth-test && docker rm -f geth-test",
    "test:geth": "npm run geth:pull && npm run geth:start && sleep 10 && hardhat test --network development && npm run geth:stop"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/govern.git"
  },
  "homepage": "https://github.com/aragon/govern",
  "keywords": [
    "Ethereum",
    "JavaScript",
    "API",
    "Govern",
    "Optimistic Voting"
  ],
  "authors": [
    {
      "name": "Samuel Furter",
      "homepage": "https://github.com/nivida"
    }
  ],
  "devDependencies": {
    "@ethereumjs/config-tsc": "^1.1.1",
    "@ethereumjs/config-tslint": "^1.1.1",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@types/ecurve": "^1.0.0",
    "@types/jest": "^26.0.15",
    "coveralls": "^3.1.0",
    "dependency-check": "^4.1.0",
    "jest": "^26.6.1",
    "rollup": "^2.45.2",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^26.4.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "@ethersproject/constants": "^5.1.0",
    "@ethersproject/contracts": "^5.1.0",
    "@ethersproject/providers": "^5.1.0",
    "@ethersproject/strings": "^5.1.0",
    "@types/bigi": "^1.4.2",
    "@urql/core": "^1.13.1",
    "dvote-js": "1.1.5",
    "dvote-solidity": "1.1.0",
    "ethers": "^5.1.4",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "isomorphic-unfetch": "^3.1.0"
  }
}
